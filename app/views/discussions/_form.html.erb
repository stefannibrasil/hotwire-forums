<%= form_with(model: discussion) do |form| %>
  <% if discussion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(discussion.errors.count, "error") %> prevented this discussions from being saved:
      <ul>
        <% discussion.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "How do I...?" %>
  </div>

  <div>
    <%= form.label :pinned %>
    <%= form.check_box :pinned %>
  </div>

  <div>
    <%= form.label :closed %>
    <%= form.check_box :closed %>
  </div>

  <% if discussion.new_record? %>
    <%= form.fields_for :posts do |p| %>
      <div class="mb-3">
        <%= form.label :body %>
        <%= p.rich_text_area :body, placeholder: "Kickoff the discussion" %>
      </div>
    <% end %>
  <% end %>

  <div>
    <%= form.submit %>
  </div
<% end %>