<%= form_with(model: discussion) do |form| %>
  <% if discussion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(discussion.errors.count, "error") %> prevented this discussions from being saved:
      <ul>
        <% discussion.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "How do I...?" %>
  </div>

  <div>
    <%= form.label :pinned %>
    <%= form.check_box :pinned %>
  </div>

  <div>
    <%= form.label :cosed %>
    <%= form.check_box :closed %>
  </div>

  <div>
    <%= form.submit %>
  </div
<% end %>