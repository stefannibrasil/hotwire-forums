<div class="d-flex justify-between align-center">
  <h1>Notifications</h1>
  <%= button_to read_notifications_path, method: :post do %>
    Mark all as read
  <% end %>
</div>

<h3>What's new?</h3>
<% if @notifications.any? %>
  <%= render @notifications %>
<% else %>
  <div>No new notifications</div>
<% end %>

<% if @previous_notifications.any? %>
  <h4>Previously seen</h4>
  <%= render(partial: "notification", collection: @previous_notifications) %>
<% end %>