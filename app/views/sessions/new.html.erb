<div class="min-h-screen flex flex-col justify-center py-12 px-3 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <%= image_tag 'hexdevs_logo_transparent.png', class: "mx-auto h-12 w-auto" %>
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Login</h2>
    <p class="mt-2 text-center text-sm text-gray-600 max-w">
      Don't have an account?
      <%= link_to "Sign up", sign_up_path, class: "font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
        <%= form_with url: login_path, class: "mb-0 space-y-6", scope: :user do |form| %>
          <div>
            <%= form.label :username, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_field :username, required: true, class: "" %>
            </div>
          </div>

          <div>
            <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.password_field :password, required: true, class: "" %>
            </div>
          </div>

          <button class="w-full orange-button">
            <%= form.submit "Login" %>
          </button>
        <% end %>
    </div>
  </div>
</div>